<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 ">

    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 middleInnerContainer" style="">


        <form class="well form-horizontal" action="" method="post" id="contact_form" style="" onsubmit="validateForm()">


            <!-- Text input-->

            <div class="form-group">

                <div class="input-group">
                    <span class="input-group-addon"><i class="ion-person"></i></span>
                    <input name="first_name" placeholder="First Name" class="form-control" type="text" required>
                </div>

            </div>

            <!-- Text input-->

            <div class="form-group">

                <div class="input-group">
                    <span class="input-group-addon"><i class="ion-person"></i></span>
                    <input name="last_name" placeholder="Last Name" class="form-control" type="text" required>
                </div>

            </div>

            <!-- Text input-->
            <div class="form-group">

                <div class="input-group">
                    <span class="input-group-addon"><i class="ion-email"></i></span>
                    <input name="email" placeholder="E-Mail Address" class="form-control" type="text" required>
                </div>
            </div>

            <!-- Text area -->

            <div class="form-group">

                <div class="input-group">
                    <span class="input-group-addon"><i class="ion-edit"></i></span>
                    <textarea class="form-control" name="comment"
                              placeholder="Project Description" class="contactTextArea" required></textarea>
                </div>

            </div>

            <!-- Success message -->
            <div class="alert alert-success" role="alert" id="success_message">Success <i
                        class="glyphicon glyphicon-thumbs-up"></i> Thanks for contacting us, we will get back to you
                shortly.
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="control-label"></label>
                <div class="col-md-4">
                    <button type="submit" class="   btn btn-warning">Send <span
                                class="ion-paper-airplane"></span></button>
                </div>
            </div>


        </form>

    </div><!-- /.container -->
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">

    </div>

</div>


